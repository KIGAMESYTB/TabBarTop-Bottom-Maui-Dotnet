<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TabBarBottomTopApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:TabBarBottomTopApp.View">

    <TabBar>

        <Tab Title="Apple"
             Icon="apple.svg">

            <ShellContent 
                Title="Iphone"
                Icon="iphone.svg"
                ContentTemplate="{DataTemplate view:IphonePage}"/>

            <ShellContent 
                Title="Ipad"
                Icon="ipad.svg"
                ContentTemplate="{DataTemplate view:IpadPage}"/>

            <ShellContent 
                Title="MacBook"
                Icon="macbook.svg"
                ContentTemplate="{DataTemplate view:MacBookPage}"/>

        </Tab>

        <ShellContent 
            Title="Android"
            Icon="android.svg"
            ContentTemplate="{DataTemplate view:AndroidPage}"/>

    </TabBar>

</Shell>
